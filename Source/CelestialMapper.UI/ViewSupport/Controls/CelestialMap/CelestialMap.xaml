<UserControl
    x:Class="CelestialMapper.UI.CelestialMap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:CelestialMapper.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="celestialMap"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid x:Name="mainGrid">

        <Ellipse
            x:Name="ellipseBackground"
            Width="{DynamicResource Double.Map.Diameter}"
            Height="{DynamicResource Double.Map.Diameter}"
            Fill="#050b38"
            Stroke="#278a7d" />

        <!--  Lines  -->
        <Grid
            x:Name="gridLines"
            Width="{DynamicResource Double.Map.Diameter}"
            Height="{DynamicResource Double.Map.Diameter}">

            <Grid
                x:Name="azimuthLines"
                Width="{DynamicResource Double.Map.Diameter}"
                Height="{DynamicResource Double.Map.Diameter}"
                Background="{x:Null}" />

            <Grid
                x:Name="altitudeLines"
                Width="{DynamicResource Double.Map.Diameter}"
                Height="{DynamicResource Double.Map.Diameter}"
                Background="{x:Null}" />

        </Grid>

        <!--  Map's Canvas  -->
        <Canvas
            x:Name="mapCanvas"
            Width="{DynamicResource Double.Map.Diameter}"
            Height="{DynamicResource Double.Map.Diameter}"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" />
        <ItemsControl ItemsSource="{Binding ElementName=celestialMap, Path=CelestialObjects}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas HorizontalAlignment="Center" VerticalAlignment="Center" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:CelestialObject />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemContainerStyle>
                <Style TargetType="ContentPresenter">
                    <Setter Property="Canvas.Left" Value="{Binding YPos}" />
                    <Setter Property="Canvas.Top" Value="{Binding XPos}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
        </ItemsControl>

    </Grid>
</UserControl>
