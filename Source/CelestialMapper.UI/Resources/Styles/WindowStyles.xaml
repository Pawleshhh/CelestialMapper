<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <!--#region MainWindow-->

    <sys:Double x:Key="Double.MainWindow.Height">650</sys:Double>
    <sys:Double x:Key="Double.MainWindow.Width">1000</sys:Double>

    <sys:Double x:Key="Double.MainWindow.Menu.Width">300</sys:Double>

    <Style x:Key="Style.MainWindow" TargetType="Window">
        <Setter Property="Height" Value="{DynamicResource Double.MainWindow.Height}" />
        <Setter Property="Width" Value="{DynamicResource Double.MainWindow.Width}" />

        <Setter Property="Background" Value="{DynamicResource Brush.Background}" />
    </Style>

    <!--#endregion-->

</ResourceDictionary>